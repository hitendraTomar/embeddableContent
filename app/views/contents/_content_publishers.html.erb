<%= cp.hidden_field :user_id, value: current_user.id %>

<div class="form-group mb-3">
  <div class="row">
    <%= cp.label "Header", class: 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= cp.text_area :header, class: 'form-control', autofocus: true %>
      <p class="error-message"><%= cp.errors_for(:header) %></p>
    </div>
  </div>
</div>

<div class="form-group mb-3">
  <div class="row">
    <%= cp.label "Footer", class: 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= cp.text_area :footer, class: 'form-control', autofocus: true %>
      <p class="error-message"><%= cp.errors_for(:footer) %></p>
    </div>
  </div>
</div>
